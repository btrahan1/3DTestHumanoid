                         <div class="d-flex gap-1">
                            <select class="form-select form-select-sm" @bind="recipe.FeetSlot" @bind:after="Render" style="flex:2">
                                <option value="None">None</option>
                                <option value="Cloth">Cloth</option>
                                <option value="Leather">Leather</option>
                                <option value="Chain">Chain</option>
                                <option value="Plate">Plate</option>
                            </select>
                             <select class="form-select form-select-sm" @bind="recipe.FeetColor" @bind:after="Render" style="flex:1; min-width:80px;" title="Preset">
                                <option value="" disabled selected>Color...</option>
                                @foreach(var c in ColorPresets) { <option value="@c.Value">@c.Key</option> }
                            </select>
                            <input type="color" class="form-control form-control-sm form-control-color" @bind="recipe.FeetColor" @bind:after="Render" title="Custom" />
                        </div>
