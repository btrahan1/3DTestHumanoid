                                @foreach(var c in ColorPresets) { <option value="@c.Value">@c.Key</option> }
                            </select>
                            <input type="color" class="form-control form-control-sm form-control-color" @bind="recipe.HandsColor" @bind:after="Render" title="Custom" />
                        </div>
