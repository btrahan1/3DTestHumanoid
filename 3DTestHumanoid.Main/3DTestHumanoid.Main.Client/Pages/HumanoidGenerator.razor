                        <input type="color" class="form-control form-control-color w-100"
                               @bind="recipe.SkinColor" @bind:event="oninput" @onchange="Render" />
                    </div>

                    <!-- ARMOR SLOTS -->
                    <h6 class="mb-2 text-muted x-small">Armor</h6>
                    
