                            <label class="form-label x-small">Shoulders</label>
                            <input type="range" class="form-range" min="0.5" max="2.0" step="0.1"
                                   @bind="recipe.ShoulderWidth" @bind:event="oninput" @onchange="Render" />
                        </div>
                        <div class="col-6 mb-2">
